@model Identity.CustomIdentityDB.ViewModels.ResetPasswordViewModel

<div class="row">
    <div class="col-md-8 offset-md-2">
        <h1 class="text-center">Reset Password</h1>

        <form asp-controller="Account" asp-action="ResetPassword" method="POST">
            <!-- Token -->
            <input asp-for="Token" type="hidden" />

            <!-- Email -->
            <input asp-for="Email" type="hidden" />

            <!-- Password -->
            <div class="form-group">
                <label asp-for="Password" class="col-md-2">Password</label>
                <div class="col-md-12">
                    <input asp-for="Password" type="password" class="form-control" />
                </div>
            </div>

            <!-- Confirm Password -->
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="col-md-2">Confirm Password</label>
                <div class="col-md-12">
                    <input asp-for="ConfirmPassword" type="password" class="form-control" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-12">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </div>

            <div asp-validation-summary="All"></div>
        </form>
    </div>
</div>